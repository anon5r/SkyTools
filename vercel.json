{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "functions": {
    "server/api/*.ts": {
      "runtime": "nodejs20.x"
    },
    "server/routes/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/api/$1"
    },
    {
      "source": "/routes/(.*)",
      "destination": "/server/routes/$1"
    },
    {
      "source": "/functions/(.*)",
      "destination": "/server/routes/$1"
    }
  ]
}

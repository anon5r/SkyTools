{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "WebWorker"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "pretty": false,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "node",
      "@types/node",
      "@nuxt/types",
      "@nuxt/vue-app",
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
  },
  "extends": "./.nuxt/tsconfig.json",
  "include": ["**/*.ts", "**/*.vue", "**/*.js"],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/.nuxt/**",
    "**/nuxt.d.ts",
    "**/docs/**",
  ]
}
